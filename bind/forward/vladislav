
; BIND data file for local loopback interface
;
$TTL	604800
@	IN	SOA	vladislav. root.vladislav. (
			      2		; Serial
			 604800		; Refresh
			  86400		; Retry
			2419200		; Expire
			 604800 )	; Negative Cache TTL

;name servers - NS records

@	IN	NS 	vladislav.



;name servers - A records

@ IN 	A	127.0.0.2

;Mail Server MX records

vladislav	 IN	MX 	10 	mail.vladislav.

;A records for Host names

www 	IN	A	127.0.0.3
mail	IN	A	127.0.0.4

;CNAME record

ftp	IN	CNAME	www.vladislav.

