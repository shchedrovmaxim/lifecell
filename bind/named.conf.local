
acl docker {
	172.21.0.2;	
	172.17.0.2;
	172.19.0.2;
	172.20.0.2;
};

acl other {

	127.0.0.1;

};
view hello {

	match-clients { docker; };
	
	zone "vladislav.local" {

		type master;
		file "/etc/bind/zones/forward/vladislav.local";

	};

};

view hi {

	match-clients { other; };
	
	zone "maksym.local"	{

		type master;
		file "/etc/bind/zones/forward/maksym.local";

	};

};



